# constants
tolerance 2.0
filetype pdb
output PET_MBA_droplet.pdb
maxit 1000

# Input files
structure PET_50N.pdb
  fixed 290 30 30 0 0 0 # Angstroms
  center
  constrain_rotation z 0. 90.
  constrain_rotation y 90. 0.
  #constrain_rotation x 90. 0.
end structure

structure MBA.pdb
  number 200
  inside sphere 290 30 30 20
end structure
